extends layout

block content
  .inner
    h2 Top #{stores.length} stores
    table.table
      thead
        td Photo
        td Ranking
        td Name
        td Reviews
        td Average Rating

      each store, i in stores
        tr
          td
            a(href=`/store/${store.slug}`)= store.name
              img(src=`/uploads/${store.photo || 'store.png'}`, alt=store.name)
          td #{i + 1}
          td: a(href=`/store/${store.slug}`)= store.name
          td #{Math.round(store.averageRating * 10) / 10} / 5
